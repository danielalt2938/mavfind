{
  "name": "firebase-function-backend",
  "version": "1.0.0",
  "description": "Firebase Functions v2 backend for MavFind vector search",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "dependencies": {
    "@genkit-ai/core": "^0.9.0",
    "@genkit-ai/googleai": "^0.9.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "p-queue": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  }
}
